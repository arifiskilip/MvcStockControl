@model MvcProject.Models.Entity.Products
@{
    ViewBag.Title = "ProductUpdate";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@using (Html.BeginForm("ProductUpdate", "Product", FormMethod.Post))
{
<div class="form-group">
    @Html.LabelFor(p => p.Id)
    @Html.TextBoxFor(p => p.Id, new { @class = "form-control", @readonly = true })
    <br />
    @Html.LabelFor(p => p.ProductName)
    @Html.TextBoxFor(p => p.ProductName, new { @class = "form-control" })
    <br />
    @Html.LabelFor(p => p.Brand)
    @Html.TextBoxFor(p => p.Brand, new { @class = "form-control" })
    <br />
    <label>Kategorisi</label>
    @Html.DropDownListFor(p=> p.CategoryId,(List<SelectListItem>)ViewBag.data,new { @class="form-control"})
    <br />
    @Html.LabelFor(p => p.Price)
    @Html.TextBoxFor(p => p.Price, new { @class = "form-control" })
    <br />
    @Html.LabelFor(p => p.UnitsInStock)
    @Html.TextBoxFor(p => p.UnitsInStock, new { @class = "form-control" })
</div>
    <button class="btn btn-warning">Ürünü Güncelle</button>
}

